<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/aaa"
    >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Kacper Trepczyk"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/txt2"
        android:layout_width="250dp"

        android:layout_height="250dp"
        android:layout_below="@id/txt1"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/s4"
        android:id="@+id/s5"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp">

    </SeekBar>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/s5"
        android:id="@+id/s6"
       android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp">

    </SeekBar>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OP"
        android:id="@+id/b1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="570dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OL"
        android:id="@+id/b2"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="570dp"/>
    <ImageView
            android:id="@+id/txt3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/txt1"
            android:layout_centerHorizontal="true"
            />

    <TextView
        android:id="@+id/R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="R"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/txT4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/B"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="A"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/txT6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txT4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="ZI"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/txT7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txT6"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="ZO"
        android:textSize="25dp" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="22dp"
        android:id="@+id/s1"/>
    <TextView
        android:id="@+id/G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="G"
        android:textSize="25dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/R"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="22dp"
        android:id="@+id/s2"/>

    <TextView
        android:id="@+id/B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/G"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="B"
        android:textSize="25dp" />

    <SeekBar
        android:id="@+id/s3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/G"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp" />

<SeekBar
    android:id="@+id/s4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/s3"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/losuj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="570dp"

        android:text="wczytaj zdjecie" />
</RelativeLayout>